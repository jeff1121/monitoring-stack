{
  "id": null,
  "uid": "node-exporter-overview",
  "title": "Node Exporter - 主機監控",
  "tags": ["infrastructure", "node-exporter"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "CPU 使用率",
      "datasource": {
        "type": "prometheus",
        "uid": "thanos"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100",
          "legendFormat": "CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 80},
              {"color": "red", "value": 95}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto"
      },
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "type": "stat",
      "title": "記憶體使用率",
      "datasource": {
        "type": "prometheus",
        "uid": "thanos"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
          "legendFormat": "Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 80},
              {"color": "red", "value": 95}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto"
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0}
    },
    {
      "id": 3,
      "type": "stat",
      "title": "根磁碟使用率",
      "datasource": {
        "type": "prometheus",
        "uid": "thanos"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (node_filesystem_avail_bytes{instance=~\"$instance\",mountpoint=\"/\",fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{instance=~\"$instance\",mountpoint=\"/\",fstype!~\"tmpfs|overlay\"})) * 100",
          "legendFormat": "Disk"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 80},
              {"color": "red", "value": 90}
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto"
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0}
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "網路流量 (MB/s)",
      "datasource": {
        "type": "prometheus",
        "uid": "thanos"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\", instance=~\"$instance\"}[5m])) / 1024 / 1024",
          "legendFormat": "RX"
        },
        {
          "refId": "B",
          "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\", instance=~\"$instance\"}[5m])) / 1024 / 1024",
          "legendFormat": "TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MBs",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 100},
              {"color": "red", "value": 200}
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "系統負載 (1m/5m/15m)",
      "datasource": {
        "type": "prometheus",
        "uid": "thanos"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "node_load1{instance=~\"$instance\"}",
          "legendFormat": "load1"
        },
        {
          "refId": "B",
          "expr": "node_load5{instance=~\"$instance\"}",
          "legendFormat": "load5"
        },
        {
          "refId": "C",
          "expr": "node_load15{instance=~\"$instance\"}",
          "legendFormat": "load15"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "磁碟 I/O 利用率",
      "datasource": {
        "type": "prometheus",
        "uid": "thanos"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "avg by (instance) (rate(node_disk_io_time_seconds_total{instance=~\"$instance\"}[5m]) * 100)",
          "legendFormat": "IO Util"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 80},
              {"color": "red", "value": 95}
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 17}
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "容器 CPU / 記憶體",
      "datasource": {
        "type": "prometheus",
        "uid": "thanos"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, (sum by (name) (rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]))) * 100)",
          "legendFormat": "{{name}} CPU"
        },
        {
          "refId": "B",
          "expr": "topk(5, sum by (name) (container_memory_usage_bytes{name!=\"\"} / 1024 / 1024))",
          "legendFormat": "{{name}} MEM (MB)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 17}
    }
  ],
  "templating": {
    "list": [
      {
        "name": "instance",
        "label": "Node",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "thanos"
        },
        "query": "label_values(node_uname_info, instance)",
        "refresh": 1,
        "sort": 1,
        "current": {
          "text": "All",
          "value": ".*",
          "selected": true
        },
        "includeAll": true,
        "multi": false,
        "hide": 0,
        "definition": "label_values(node_uname_info, instance)",
        "regex": ""
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"],
    "time_options": ["5m", "15m", "1h", "3h", "6h", "12h", "24h"]
  },
  "annotations": {
    "list": []
  },
  "links": []
}
